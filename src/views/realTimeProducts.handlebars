<div class="p-3">
    <h2 class="text-center m-3">{{generalTitle}}</h2>
    <div id="alerts">
    </div>
    <div class="d-flex flex-rows">
        <div class="d-flex flex-column me-3">
            <div class="card w-100 mb-3">
                <div class="card-body">
                    <h5 class="card-title">Agregar nuevo producto</h5>
                    <form id="formAdd">
                        <div class="d-flex flex-rows mb-3">
                            <div class="w-100 me-3">
                                <label for="title" class="form-label">Nombre</label>
                                <input required type="text" class="form-control" id="title" name="title">
                            </div>
                            <div class="w-100">
                                <label for="code" class="form-label">Código</label>
                                <input required type="text" class="form-control" id="code" name="code">
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="description" class="form-label">Descripción</label>
                            <input  required type="text" class="form-control" id="description" name="description">
                        </div>
                        <div class="mb-3">
                            <label for="category" class="form-label">Categoría</label>
                            <select required id="category" name="category" class="form-select">
                                <option selected>Elige una categoría</option>
                                <option value="almacen">Almacen</option>
                                <option value="bebidas">Bebidas</option>
                                <option value="lacteos">Lacteos</option>
                                <option value="carnes">Carnes</option>
                                <option value="snack">Snack</option>
                            </select>
                        </div>
                        <div class="d-flex flex-rows mb-3">
                            <div class="w-100 me-3">
                                <label class="form-label" for="price">Precio</label>
                                <input required type="number" class="form-control" id="price" name="price">
                            </div>
                            <div class="w-100">
                                <label class="form-label" for="stock">Stock</label>
                                <input required type="number" class="form-control" id="stock" name="stock">
                            </div>
                        </div>
                         <div class="mb-3">
                            <label for="thumbnail" class="form-label">Imagen</label>
                            <input type="text" class="form-control" id="thumbnail" name="thumbnail">
                        </div>
                        <div class="mb-3">
                            <label for="status" class="form-label">Estado</label>
                            <select id="status" name="status" class="form-select" aria-placeholder="Selecciona el estado de tu producto">
                                <option value="active">Activo</option>
                                <option value="inactive">Inactivo</option>
                            </select>
                        </div>
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary">Crear</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="card w-100 me-3">
                <div class="card-body">
                    <h5 class="card-title">Eliminar producto</h5>
                    <form id="formDelete">
                        <div class="mb-3">
                            <label for="id" class="form-label">ID del producto</label>
                            <input required type="text" class="form-control" id="id" name="id">
                        </div>
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary">Eliminar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="d-flex flex-column w-100">
            <h2>{{listTitle}}</h2>
            <ul id="listProducts" class="list-group list-group-flush w-100">
                
            </ul>
        </div>
    </div>
</div>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/realTimeProducts.js"></script>